# OpenAI API Configuration
# Replace with your OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model Configuration
# Specify which OpenAI model to use for generation
OPENAI_MODEL=gpt-4o-mini-2024-07-18

# Weather API Configuration (if applicable)
# WEATHER_API_KEY=your_weather_api_key_here

# Email Service Configuration (if using email sending feature)
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USERNAME=your_email@example.com
# EMAIL_PASSWORD=your_email_password
# EMAIL_FROM=your_sending_email@example.com
# TO_EMAILS=recipient1@domain.com,recipient2@domain.com

# Database Configuration (if applicable)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=marketing_db
# DB_USER=db_user
# DB_PASSWORD=db_password

# Application Settings
DEBUG=False
LOG_LEVEL=INFO

# Optional: Proxy Configuration (if needed)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=http://proxy.example.com:8080

# Optional: Rate Limiting
# MAX_REQUESTS_PER_MINUTE=60
# MAX_PARALLEL_PROCESSES=5
